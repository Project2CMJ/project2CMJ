<!DOCTYPE html>
<html lang="en">

<form class="form login-form">
<div class="row justify-content-center ">
  <div class="col-md-6">
    <h2>Sign Up</h2>

  <div class="form-outline mb-4">
    <input type="name" id="name-signup" class="form-control" />
    <label class="form-label" for="name-signup">Full Name</label>
  </div>    
    
  <div class="form-outline mb-4">
    <input type="email" id="email-signup" class="form-control" />
    <label class="form-label" for="email-signup">Email address</label>
  </div>
  <div class="form-outline mb-4">
    <input type="password" id="password-signup" class="form-control" />
    <label class="form-label" for="password-signup">Password</label>
  </div>

  <div class="row">
    <div class="col text-center">
<button type="submit" class="btn btn-primary btn-block mb-4" >Sign Up</button>
    </div>
  </div>
</div>
</div>
</form>

<script src="./js/signup.js"></script>
