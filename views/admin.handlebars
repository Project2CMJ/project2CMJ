<div class="row">
  <div class="col-auto">
    <h2>Welcome, Admin!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Product:</h3>

    <form class="form new-product-form">
      <div class="form-group">
        <label for="product-name">Product name:</label>
        <input class="form-input" type="text" id="product-name" name="product-name" />
      </div>
      <div class="form-group">
        <label for="product-price">Price ($):</label>
        <input class="form-input" type="number" id="product-price" name="product-price" />
      </div>
      <div class="form-group">
        <label for="product-desc">description:</label>
        <textarea class="form-input" id="product-desc" name="product-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if products.length}}
  <div class="col-md-6 product-list">
    <h3>Current Products:</h3>

    {{#each products as |product|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/product/{{product.id}}">{{product.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{product.id}}">DELETE</button>
      </div>
    </div>
                                <div class="text-center">
                                <h5 class="fw-bolder"><a href="/product/{{product.id}}">{{product.name}}</a></h5>
                                 {{product.description}}
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <span class="dollar-amount">${{format_amount price}}</span>
                            </div>
    {{/each}}
  </div>
    {{/if}}
</div>

<script src="./js/admin.js"></script>
