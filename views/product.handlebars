
<!-- Loop over each object in the products array -->
{{#each products as |product| }}
<div class="row mb-4 product">
  <div class="col-md-5">
    <h2>
      <a href="/product/{{product.id}}">{{product.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount price}}</span>
    </p>
  </div>
  <div class="col-md-7">
    <p>
      {{product.description}}
    </p>
  </div>
</div>
{{/each}}
<!-- Render script for logged in users only -->
{{#if logged_in}}
<script src="/js/logout.js"></script>
{{/if}}
