
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
{{#each products as |product| }}
 <section class="py-5">

                <div class="col mb-5">
                    <div class="card h-100">
                        <img class="card-img-top" src="https://drive.google.com/uc?export=view&id={{format_image product.image}}" alt="..." />
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder"><a href="/product/{{product.id}}">{{product.name}}</a></h5>
                                 {{product.description}}
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <span class="dollar-amount">${{format_amount price}}</span>
                            </div>
                        </div>
                         {{#if logged_in}}
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to Favorites</a></div>
                        </div>
                        {{/if}}
                    </div>
                </div>
               
</section>

{{/each}}
<!-- Render script for logged in users only -->
{{#if logged_in}}
<script src="/js/logout.js"></script>
{{/if}}
